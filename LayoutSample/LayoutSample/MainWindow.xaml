<Window x:Class="LayoutSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayoutSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="0.5*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Button Content="One" Width="200" Height="140" Grid.Row="0" Grid.Column="0" />
		<Button Content="Two" Width="200" Height="140" Grid.Row="0" Grid.Column="1" />
		<Button Content="Three" Grid.Row="1" Grid.Column="0" />
		<Button Content="Four" Grid.Row="1" Grid.Column="1" />
		<Button Content="Five"  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" />
		<!--<Button Content="Six" Width="200" Height="140" />
		<Button Content="Seven" Width="200" Height="140" />
		<Button Content="Eight" Width="200" Height="140" />-->
	</Grid>
</Window>
